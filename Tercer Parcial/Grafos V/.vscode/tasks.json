{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build project",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Grafo.cpp",
                "${workspaceFolder}/nodoGrafo.cpp",
                "${workspaceFolder}/Validaciones.cpp",
                "-o",
                "${workspaceFolder}/Grafos.exe",
                "-I", "C:/MinGW/include", // Incluir la ruta de la librería
                "-L", "C:/MinGW/lib",     // Incluir la ruta de la librería
                "-lbgi", "-lgdi32", "-lcomdlg32", "-luuid", "-loleaut32", "-lole32" // Enlazar las librerías necesarias
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}